@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDemo.cshtml";
}

<h1>Products</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Mehsul Ad</th>
        <th>Mehsul Qiymeti</th>
        <th>Stock</th>
        <th>Sil</th>
        <th>Guncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Sock</td>
            <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-success">Guncelle</a></td>
            
        </tr>
    }
  
</table>

